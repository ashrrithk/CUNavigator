<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/backEnd">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_picture"
        android:layout_width="58dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/profile"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nav_pg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/mangosans_regular"
        android:text="Nikhil"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nav_pg_id"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_below="@id/nav_pg_name"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="91dp"
        android:fontFamily="@font/mangosans_regular"
        android:text="1841022"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>